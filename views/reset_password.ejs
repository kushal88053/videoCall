<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" media="screen" href="/index.css" />
    <title>Reset Password</title>
  </head>
  <body>
    <main id="lobby-container">
      <div id="form-container">
        <div id="form__container__header">
          <p>Reset Password</p>
        </div>
        <div id="form__container__wrapper">
          <form id="reset-password-form">
            <input
              type="password"
              name="password"
              required
              placeholder="Enter new password"
            />
            <input type="submit" value="Change Password" />
          </form>
          <div id="loader" style="display: none">Loading...</div>
        </div>
      </div>
    </main>

    <script>
      let form = document.getElementById("reset-password-form");
      let loader = document.getElementById("loader");

      form.addEventListener("submit", async (e) => {
        e.preventDefault(); // Prevent default form submission behavior

        loader.style.display = "block"; // Show loader
        form.style.display = "none"; // Hide form while processing

        let password = e.target.password.value;
        const token = window.location.pathname.split("/")[2]; // Extract token from the URL path
        console.log(token);
        // Check if token exists in the URL
        if (!token) {
          alert("Invalid or missing reset token.");
          loader.style.display = "none";
          form.style.display = "block";
          return;
        }

        try {
          const response = await fetch(`/auth/reset-password/${token}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ password }),
          });

          const data = await response.json();

          loader.style.display = "none"; // Hide loader
          form.style.display = "block"; // Show form again if needed

          if (response.ok) {
            alert("Password updated successfully! You can now log in.");
            window.location.href = "/login"; // Redirect to login page
          } else {
            alert("Error: " + data.message);
          }
        } catch (error) {
          console.log(error);
          // console.error("Error:", error);
          loader.style.display = "none"; // Hide loader
          form.style.display = "block"; // Show form again if needed
          alert("Failed to reset password. Please try again.");
        }
      });
    </script>
  </body>
</html>
