<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" media="screen" href="/index.css" />
    <title>Resend Verification Email</title>
  </head>
  <body>
    <main id="lobby-container">
      <div id="form-container">
        <div id="form__container__header">
          <p>Resend Verification Email</p>
        </div>
        <div id="form__container__wrapper">
          <!-- Form for resending email -->
          <form id="resend-email-form">
            <input
              type="email"
              name="email"
              required
              placeholder="Enter your registered Email"
            />
            <input type="submit" value="Resend Email" />
          </form>
          <!-- Loader (Initially hidden) -->
          <div id="loader" style="display: none">Loading...</div>
        </div>
      </div>
    </main>

    <script>
      let form = document.getElementById("resend-email-form");
      let loader = document.getElementById("loader");

      form.addEventListener("submit", async (e) => {
        e.preventDefault(); // Prevent default form submission behavior

        // Show loader
        loader.style.display = "block";

        // Hide the form while loading
        form.style.display = "none";

        // Get form data
        let email = e.target.email.value;

        // Send a POST request to the backend (assuming "/auth/resend-email" endpoint for resending email)
        try {
          const response = await fetch("/auth/resend-email", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              email: email,
            }),
          });

          const data = await response.json();

          // Hide loader when response is received
          loader.style.display = "none";

          // Show form again (if needed)
          form.style.display = "block";

          if (response.ok) {
            if (data.emailInfo && data.emailInfo.accepted.length > 0) {
              // Email successfully sent
              alert(
                "Verification email sent successfully! Please check your inbox and verify your email."
              );
            } else {
              // Email failed to send
              alert(
                "We could not send the verification email. Please check your email address or try again later."
              );
            }
          } else {
            // Error from the server
            alert("Error: " + data.message);
          }
        } catch (error) {
          console.error("Error:", error);

          // Hide loader if there is an error
          loader.style.display = "none";

          // Show form again (if needed)
          form.style.display = "block";

          alert("Failed to resend the verification email. Please try again.");
        }
      });
    </script>
  </body>
</html>
