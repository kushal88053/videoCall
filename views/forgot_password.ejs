<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" media="screen" href="/index.css" />
    <title>Forgot Password</title>
  </head>
  <body>
    <main id="lobby-container">
      <div id="form-container">
        <div id="form__container__header">
          <p>Forgot Password</p>
        </div>
        <div id="form__container__wrapper">
          <!-- Loader (Initially hidden) -->
          <form id="forgot-password-form">
            <input
              type="email"
              name="email"
              required
              placeholder="Enter your email"
            />
            <input type="submit" value="Send Reset Link" />
          </form>
          <div id="loader" style="display: none">Loading...</div>
        </div>
      </div>
    </main>

    <script>
      let form = document.getElementById("forgot-password-form");
      let loader = document.getElementById("loader");

      form.addEventListener("submit", async (e) => {
        e.preventDefault(); // Prevent default form submission behavior

        // Show loader
        loader.style.display = "block";

        // Hide the form while loading
        form.style.display = "none";

        // Get form data
        let email = e.target.email.value;

        // Send a POST request to the backend ("/auth/forgot-password" endpoint)
        try {
          const response = await fetch("/auth/forgot-password", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              email: email,
            }),
          });

          const data = await response.json();

          // Hide loader when response is received
          loader.style.display = "none";

          // Show form again (if needed)
          form.style.display = "block";

          if (response.ok) {
            alert(
              "Password reset email sent successfully! Please check your inbox."
            );
            window.location.href = "/login"; // Redirect to login page
          } else {
            alert("Error: " + data.message);
          }
        } catch (error) {
          console.error("Error:", error);

          // Hide loader if there is an error
          loader.style.display = "none";

          // Show form again (if needed)
          form.style.display = "block";

          alert("Failed to send password reset email. Please try again.");
        }
      });
    </script>
  </body>
</html>
