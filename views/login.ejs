<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" media="screen" href="/index.css" />
    <title>Login</title>
    <style>
      #additional-links {
        text-align: center;
        margin-top: 20px;
      }

      #additional-links a {
        color: #007bff;
        text-decoration: none;
        font-size: 14px;
        margin: 5px 0;
        display: block;
        transition: color 0.3s;
      }

      #additional-links a:hover {
        color: #0056b3;
      }

      #additional-links p {
        margin: 10px 0;
      }
    </style>
  </head>
  <body>
    <main id="lobby-container">
      <div id="form-container">
        <div id="form__container__header">
          <p>Login</p>
        </div>
        <div id="form__container__wrapper">
          <form id="login-form">
            <input
              type="email"
              name="email"
              required
              placeholder="Enter your Email"
            />
            <input
              type="password"
              name="password"
              required
              placeholder="Enter your Password"
            />
            <input type="submit" value="Login" />
          </form>
          <div id="additional-links">
            <p>
              <a href="/forgot-password" id="forgot-password-link"
                >Forgot Password?</a
              >
            </p>
            <p><a href="/signup">Sign Up</a></p>
            <p>
              <a
                href="/resend"
                style="display: none"
                id="resend-verification-link"
                >Resend Verification Email</a
              >
            </p>
          </div>
        </div>
      </div>
    </main>

    <script>
      let form = document.getElementById("login-form");

      form.addEventListener("submit", async (e) => {
        e.preventDefault(); // Prevent default form submission behavior

        // Get form data
        let email = e.target.email.value;
        let password = e.target.password.value;

        // Send a POST request to the backend (assuming "/auth/login" endpoint)
        try {
          const response = await fetch("/auth/login", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              email: email,
              password: password,
            }),
          });

          const data = await response.json(); // Parse response JSON

          console.log(data);
          if (response.ok) {
            const token = data.token;
            localStorage.setItem("token", token);
            console.log(token);
            // Set a simple cookie
            document.cookie = `token=${token}; max-age=84600; path=/`;

            alert("Login successful!");
            window.location.href = "/dashboard"; // Redirect to the dashboard or another page
          } else {
            alert("Error: " + data.message); // Show error
            if (response.status === 401) {
              document.getElementById(
                "resend-verification-link"
              ).style.display = "block"; // Show the resend link
            }
          }
        } catch (error) {
          console.error("Error:", error);
          alert("Login failed. Please try again.");
        }
      });
    </script>
  </body>
</html>
