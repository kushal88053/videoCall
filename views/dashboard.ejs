<style>
.content {
    display: none; /* Hide all content divs by default */
}

.content.active {
    display: block; /* Show only the active content */
}
.nav__link.active {
  color: rgb(230, 228, 228);
    text-decoration: none;
    border-color: #845695;
}
.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  right: 0;
  background: white;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  list-style: none;
  padding: 0;
  margin: 0;
  z-index: 1000;
}

.dropdown-menu li {
  padding: 8px 12px;
  cursor: pointer;
}

.dropdown-menu li:hover {
  background-color: #f0f0f0;
}

.hidden {
  display: none;
}

.visible {
  display: block;
}

/* Background overlay */
#calling-status {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent background */
  display: flex;
  align-items: center; /* Center content vertically */
  justify-content: center; /* Center content horizontally */
  z-index: 1000; /* Ensure it's above other content */
}

/* Card container */
.calling-card  {
  background-color: white; /* Card background */
  border-radius: 12px; /* Rounded corners */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Subtle shadow */
  width: 300px; /* Card width */
  padding: 20px; /* Card padding */
  text-align: center; /* Center the text */
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px; /* Space between elements */
}

/* Caller image styling */
#caller-image {
  width: 100px; /* Fixed width */
  height: 100px; /* Fixed height */
  border-radius: 50%; /* Circular image */
  object-fit: cover; /* Ensure image covers area */
  border: 3px solid #007bff; /* Add a border */
}

/* Caller name styling */
#caller-name {
  font-size: 1.4rem; /* Larger font for name */
  font-weight: bold;
  color: #333; /* Dark text color */
  margin: 0; /* Remove margin */
}

/* Caller status styling */
#caller-status {
  font-size: 1rem; /* Slightly smaller font for status */
  color: #555; /* Subtle gray color */
  margin: 0; /* Remove margin */
}

/* Cancel button styling */
#cancel-call-button {
  background-color: #ff4d4d; /* Red background for the cancel button */
  color: white; /* White text color */
  border: none; /* Remove default border */
  border-radius: 8px; /* Rounded corners */
  padding: 10px 20px; /* Button padding */
  font-size: 1rem; /* Font size for the button */
  cursor: pointer; /* Pointer cursor on hover */
  transition: background-color 0.3s ease; /* Smooth hover effect */
}

#cancel-call-button:hover {
  background-color: #e63939; /* Darker red on hover */
}
/*  */

#incoming-call  {
  display: none; /* Initially hidden */
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6); /* Dim background overlay */
  z-index: 9999; /* Ensure it overlays everything */
  justify-content: center;
  align-items: center;
}

.incoming-call-container  {
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
  text-align: center;
  padding: 20px;
  width: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#caller-image ,#missed-caller-image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover; /* Ensure proper image cropping */
  margin-bottom: 20px;
}

.caller-info {
  margin-bottom: 20px;
}

#caller-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

#incoming-call-buttons , #missed-call-buttons{
  display: flex;
  justify-content: space-around;
  width: 100%;
}

#accept-call-btn,
#reject-call-btn , .return-call-btn{
  width: 100px;
  padding: 10px;
  font-size: 14px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.2s ease, color 0.2s ease;
}

#accept-call-btn ,.return-call-btn{
  background-color: #4caf50; /* Green for accept */
  color: white;
}

#accept-call-btn:hover ,.return-call-btn:hover{
  background-color: #45a049;
}

#reject-call-btn {
  background-color: #f44336; /* Red for reject */
  color: white;
}

#reject-call-btn:hover {
  background-color: #d32f2f;
}

/* rejected call ui  */

#end-call {
