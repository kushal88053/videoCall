/* settign */
.setting-dropdown {
  float: right;
  margin-right: 115px;
  overflow: hidden;
}

.setting-dropdown .setting-dropbtn {
  font-size: 16px;
  border: none;
  outline: none;
  color: white;
  padding: 14px 16px;
  background-color: #ff0000;
  font-family: inherit;
  margin: 0;
}

.setting-dropbtn:hover {
